.left-contents
  .upper-content
    .title S T O C K

    =form_for(@memo) do |f|
      .formbox
        .formbox__food FOOD
        -# = f.label :FOOD, class: 'formbox__food__label'
        = f.text_field :food, class: 'formbox__food__name', placeholder: ' type a food name'
        -# %input{type:"text", class:"formbox__food__name", placeholder: " まずは、ログイン"}
        .formbox__date LIMIT!
        -# = f.label :LIMIT, class: 'formbox__date__label'
        = f.date_select :limit_date, class: 'formbox__date__limit'
        -# %input{type:"date", class:"formbox__date__limit"}
      .btn
        = f.submit 'AddFood', class: 'submit-btn'
        -# = link_to new_user_registration_path do
        -#   %input{type:"submit", class:"submit-btn", value:"add food"}

  .main-content 
    
    .title-content 
      .title-content__food
        
        Food Name
      .title-content__limit
        Limit Date
    .list
      .list__foods
        - @memos.each do |memo|
          .list__foods__one 
            = icon('fas','fish')
            = memo.food

      .list__limit
        - @memos.each do |memo|
          .list__limit__date
            = icon('fas', 'exclamation-triangle')
            = memo.limit_date

      .list__edit
        - @memos.each do |memo|
          .list__edit__btn
            =link_to '変更', edit_memo_path(memo)


      .list__delete
        - @memos.each do |memo|
          .list__delete__btn
            = link_to memo_path(memo), method: :delete do
              終わり